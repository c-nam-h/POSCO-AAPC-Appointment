    </div>

    <!-- Slideshow Container -->
    <div class="container">
      <div class="slideshow-container">
        <div class="mySlides">
          <% for (var i = 13; 7 <= i; i--) { %>
          <div class="text">
            <a
              href="/appointments/<%= daysOfTwoWeeks[i].getFullYear() %>-<%= daysOfTwoWeeks[i].getMonth() + 1 %>-<%= daysOfTwoWeeks[i].getDate() %>"
            >
              <div>
                <%= daysOfTwoWeeks[i].toDateString().slice(0, 3) %>
              </div>
              <div>
                <%= daysOfTwoWeeks[i].toDateString().slice(4, 7) %> <%=
                daysOfTwoWeeks[i].getDate() %>
              </div>
            </a>
          </div>
          <% } %>
        </div>
        <div class="mySlides">
          <% for (var i = 6; 0 <= i; i--) { %>
          <div class="text">
            <a href="#">
              <div>
                <%= daysOfTwoWeeks[i].toDateString().slice(0, 3) %>
              </div>
              <div>
                <%= daysOfTwoWeeks[i].toDateString().slice(4, 7) %> <%=
                daysOfTwoWeeks[i].getDate() %>
              </div>
            </a>
          </div>
          <% } %>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>
    </div>

