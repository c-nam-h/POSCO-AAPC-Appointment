    <!-- Modal -->
    <div
      class="modal fade"
      id="modal1"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <form action="#" method="post">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                Submit Appointment Information
              </h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="modal-body-first-row">
                <div>
                  <label for="category">Category</label>
                  <select class="form-control" name="category" id="category">
                    <option value="ar">AR</option>
                    <option value="as">AS</option>
                    <option value="sb">SB</option>
                  </select>
                </div>
                <div>
                  <label for="appointmentNumberButton">Appointment #</label>
                  <button
                    class="btn btn-light form-control"
                    type="button"
                    id="appointmentNumberButton"
                  >
                    Generate Appointment #
                  </button>
                </div>
              </div>
              <div class="modal-body-remaining">
                <label for="releaseNumber">Release #</label>
                <input class="form-control" type="text" />
                <label for="destination">Destination</label>
                <select
                  class="form-control"
                  name="destination"
                  id="destination"
                >
                  <option value="poscoaapc">POSCO AAPC</option>
                  <option value="mobileport">Port of Mobile</option>
                  <option value="lg">LG</option>
                </select>
                <label for="carrier">Carrier</label>
                <select class="form-control" name="carrier" id="carrier">
                  <option value="ike">IKE Transportation</option>
                  <option value="oi">O&I</option>
                  <option value="mmx">MMX</option>
                </select>
                <label for="truckNumber">Truck #</label>
                <input class="form-control" id="truckNumber" type="text" />
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
              >
                Close
              </button>
              <button type="submit" class="btn btn-primary">
                Submit
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <!-- Appointment Page Title -->
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">Appointments</h1>
      <% if (now) { %>
      <p class="lead">
        <%= now %>
      </p>
      <% } else { %>
      <p class="lead">
        <%= selectedDate %>
      </p>
